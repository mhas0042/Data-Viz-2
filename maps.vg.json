{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Happiness Scores Around the World (2015)",
    "width": 800,
    "height": 400,
    "data": {
        "url": "ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
    },
    "projection": { "type": "equalEarth" },
    "params": [
        {
            "name": "Happiness_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 90,
                "step": 10,
                "name": "Happiness Score: "
            }
        }
    ],
    "layer": [
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "2015Clean.csv"
                        },
                        "key": "Country",
                        "fields": ["Happiness Score"]
                    }
                },
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "oceans.topojson",
                "format": { "type": "topojson", "feature": "oceans" }
            },
            "mark": { "type": "geoshape", "fill": "skyblue" }
        },
        {
            "data": {
                "url": "WorldMapWithGraticules.topojson",
                "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
            },
            "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "2015Clean.csv"
                        },
                        "key": "Country",
                        "fields": ["Happiness Score"]
                    }
                },
                {"filter": "datum['Happiness Score'] > Happiness_Above"}
            ],
            "mark": { "type": "geoshape", "stroke": "white" },
            "encoding": {
                "color": {
                    "field": "Happiness Score",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [0, 20, 40, 60, 80, 100],
                        "range": ["#ffffcc", "#d9f0a3", "#addd8e", "#78c679", "#41ab5d", "#238443", "#005a32"]
                    }
                },
                "tooltip": [
                    { "field": "properties.NAME", "type": "nominal", "title": "Country" },
                    {
                        "field": "Happiness Score",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "name": "Iceland",
                        "lon": -2.87,
                        "lat": 54.13,
                        "note": "Iceland"
                    },
                    {
                        "name": "Malaysia",
                        "lon": 111.97,
                        "lat": 4.21,
                        "note": "Malaysia"
                    },
                    {
                        "name": "Australia",
                        "lon": 148.78,
                        "lat": -30.29,
                        "note": "Australia"
                    },
                    {
                        "name": "China",
                        "lon": 104.19,
                        "lat": 30.86,
                        "note": "China"
                    }
                ]
            },
            "layer": [
                {
                    "mark": {"type": "text", "align": "right", "baseline": "middle", "dx": -5, "dy": -10},
                    "encoding": {
                        "longitude": {"field": "lon", "type": "quantitative"},
                        "latitude": {"field": "lat", "type": "quantitative"},
                        "text": {"field": "name", "type": "nominal"},
                        "color": {"value": "black"}
                    }
                }
            ]
        }
    ]
}
